{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "./dist",
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
